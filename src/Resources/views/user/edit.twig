{% set template = config.get('@silexstarter-dashboard.config.template') %}
{% extends '@silexstarter-dashboard/'~ template ~'/index.twig' %}

{% block stylesheet %}
    {{parent()}}

    {{ stylesheet('@silexstarter-datatable/css/dataTables.bootstrap.css') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-title">
                    <i class="fa fa-fw fa-user"></i>
                    Create User
                </div>
                <div class="widget-body flow">
                    <div class="row col-md-8">
                        {% include '@silexstarter-usermanager/user/form.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}